<%- include('partials/header') %>
  <div class="center">
    <form class="" action="/deletecoursetodb" method="post">
      <div class="form-group">
        <label for="">Tên khóa học </label>
        <input type="text" class="form-control" name="courseid" value="<%= course[0].courseid %>" style="display:none">

        <input type="text" class="form-control" name="coursename" value="<%= course[0].coursename %>" readonly>

      </div>
      <div class="form-group">
        <label for="">Bộ môn </label>
        <input type="text" class="form-control" name="subject" value="<%= course[0].subject %>" readonly>

      </div>
      <div class="form-group">
        <label for="">Ngày bắt đầu : </label>
        <input type="date" class="form-control" name="beginday" value="<%= course[0].startday %>" readonly>
      </div>
      <div class="form-group">
        <label for="">Tổng số buổi : </label>
        <input type="number" class="form-control" name="classdays" value="<%= course[0].classdays %>" readonly>
      </div>

      <div class="form-group">
        <label for="">Lí do xóa khóa học : </label>
        <textarea class="form-control" name="reason"></textarea>

      </div>

      <input type="submit" onclick="return confirm('Bạn có muốn xóa khóa học này ')" value="Xóa khóa học !" class="btn btn-danger"/>


      </form>



  </div>





<%- include('partials/footer') %>
